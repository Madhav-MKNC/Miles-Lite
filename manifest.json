{
    "manifest_version": 3,
    "name": "MILES",
    "version": "1.0",
    "description": "Write better replies. take control of the conversations.",
    "action": {
        "default_icon": {
            "128": "icon.png"
        },
        "default_title": "MILES"
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "scripting",
        "clipboardWrite"
    ],
    "background": {
        "service_worker": "src/background/background.js",
        "type": "module"
    },
    "icons": {
        "1024": "icon.png",
        "512": "icon.png",
        "256": "icon.png",
        "128": "icon.png",
        "64": "icon.png",
        "32": "icon.png",
        "16": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["https://web.whatsapp.com/*"],
            "css": ["src/content_scripts/content.css"],
            "js": ["src/content_scripts/content.js"]
        }
    ],
    "host_permissions": [
        "http://localhost:80/*",
        "http://localhost:1234/*",
        "http://miles.madhav-mknc.me/*",
        "https://miles.madhav-mknc.me/*",
        "https://web.whatsapp.com/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "*",
                "src/app/*",
                "src/content_scripts/*",
                "src/background/*"
            ],
            "matches": ["https://web.whatsapp.com/*"]
        }
    ]
}
